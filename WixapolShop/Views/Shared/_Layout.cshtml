@inject IUnitOfWork unitOfWork
@{
    var categories = unitOfWork.Category.GetAll();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WixapolShop</title>
    <link rel="stylesheet" href="~/css/BootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />

    <style>
        .dropdown-link:hover{
            color: #e95420;
            background-color:white;
            text-decoration:underline;
        }
    </style>
</head>
<body>
    <header>
        <partial name="_MainNavigationBar" />
        <div class="navigation">
            <div class="container-fluid bg-white shadow-sm">
                <div class="d-flex position-relative align-items-stretch mx-5">
                    <nav class="" style="width:260px; border-left:1px solid #eee; border-right: 1px solid #eee">
                        <div class="categories-header " data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            CATEGORIES
                        </div>
                        <div class="dropdown-menu" style="border-radius:0px; border:none; min-width:260px;">
                            @foreach (var category in categories)
                                {
                                <a href="" class="dropdown-item my-1 dropdown-link"><span style="font-weight:bold;">@category.Name</span></a>

                                }
                        </div>
                    </nav>
                    <nav class="horizontal-navigation">
                        <ul class="horizontal-navigation-ul">
                            <li style="display: list-item; text-align:center;" class="horizontal-nav-link">
                                <a href="">
                                    <span class="">PLACEHOLDER ONE</span>
                                    <span class="h-line" style="background-color: #FF503C"></span>
                                </a>
                            </li>
                            <li style="display: list-item; text-align:center;" class="horizontal-nav-link">
                                <a href="">
                                    <span class="">PLACEHOLDER TWO</span>
                                    <span class="h-line" style="background-color: #FF503C"></span>
                                </a>
                            </li>
                            <li style="display: list-item; text-align:center;" class="horizontal-nav-link">
                                <a href="">
                                    <span class="">PLACEHOLDER THREE</span>
                                    <span class="h-line" style="background-color: #FF503C"></span>
                                </a>
                            </li>
                            <li style="display: list-item; text-align:center;" class="horizontal-nav-link">
                                <a href="">
                                    <span class="">PLACEHOLDER FOUR</span>
                                    <span class="h-line" style="background-color: #FF503C"></span>
                                </a>
                            </li>
                            <li style="display: list-item; text-align:center;" class="horizontal-nav-link">
                                <a href="">
                                    <span class="">PLACEHOLDER FIVE</span>
                                    <span class="h-line" style="background-color: #FF503C"></span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>

        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container">
            &copy; 2022 - Wixapol Tuchola - <a asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        //Dropdown on user information in navbar hover
        $(document).ready(function () {
            $('.dropdown-new').hover(function () {
                $(this).find('.dropdown-settings').stop(true, true).delay(10).fadeIn(180);
            }, function () {
                $(this).find('.dropdown-settings').stop(true, true).delay(90).fadeOut(200);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
