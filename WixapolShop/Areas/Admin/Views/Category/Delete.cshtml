@model Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="container">
    <div class="row border border-1">
        <div class="col-12">
            <h1 class="mt-2 text-primary text-center">Delete Category</h1>
            <form method="post">
                <input asp-for="Id" hidden />
                <div class="mt-2 text-center">
                    <div class="d-flex align-items-center justify-content-center">
                        <label asp-for="Name" class="form-label me-2 pt-1">Name:</label>
                        <input asp-for="Name" type="text" class="form-control p-1 w-25" disabled />
                    </div>
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <div class="mt-2 text-center mb-3">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Managment" class="btn btn-info">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
