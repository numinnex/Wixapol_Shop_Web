@model List<Category>
@{
    ViewData["Title"] = "Managment";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";

}


<div class="container p-2 border border-1 w-75">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> New Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Id
                </th>
                <th>
                    Category Name
                </th>
                <th class="">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].Id
                    </td>
                    <td class="w-50">
                        @Model[i].Name
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-success"><i class="bi bi-pen"></i> Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

