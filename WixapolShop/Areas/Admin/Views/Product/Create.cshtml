@model ProductCreationVM
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
@{
    string baseSpecInfo = "Semicolon Seperated(e.g Connection; Color; etc..)";
    string baseSpecInfoValues = "Semicolon Seperated(e.g Wireless; Black; etc..)";
    string advancedSpecInfo = "Semicolon Seperated(e.g Sensor;Refresh Rate;etc.. )";
    string advancedSpecInfoValues = "Semicolon Seperated(e.g Optical;1000Hz;etc.. )";
    string physicalSpecInfo = "Semicolon Seperated(e.g Height;Width;etc..)";
    string physicalSpecInfoValues = "Semicolon Seperated(e.g 15cm;10cm;etc..)";
}


<form method="post"  enctype="multipart/form-data">
    <div class="container border border-1">
        <div class="text-center">
            <h1 class="mt-2 text-primary ">Product Creation</h1>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="mb-3">
                    <label asp-for="Product.Name" class="form-label"></label>
                    <input type="text" asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.CategoryId" class="form-label"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.ProducentId" class="form-label"></label>
                    <select asp-for="Product.ProducentId" asp-items="@Model.ProducentList" class="form-select">
                        <option disabled selected>--Select Producent--</option>
                    </select>
                    <span asp-validation-for="Product.ProducentId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <img src="https://picsum.photos/570/240" class="*rounded-2 img-fluid" />
            </div>
        </div>
        <div class="row border border-2 border-bottom-0 border-end-0 border-start-0 mt-2">
            <h4 class="text-primary mt-2">Base Specification</h4>
            <div class="col-6 mt-1">
                <label asp-for="BaseSpec.SpecName" class="form-label"></label>
                <div class="form-floating">
                    <input asp-for="BaseSpec.SpecName" type="text" class="form-control" id="floatingInput" placeholder="Connection;Color">
                    <label for="floatingInput">@baseSpecInfo</label>
                </div>
                    <span asp-validation-for="BaseSpec.SpecName" class="text-danger"></span>
            </div>
            <div class="col-6 mt-1">
                <label asp-for="BaseSpec.SpecValue" class="form-label"></label>
                <div class="form-floating">
                    <textarea asp-for="BaseSpec.SpecValue" id="floatingTextArea" class="form-control" rows="7" placeholder="Wireless;Black" style="height:230px;"></textarea>
                    <label for="floatingTextArea">@baseSpecInfoValues</label>
                </div>
                    <span asp-validation-for="BaseSpec.SpecValue" class="text-danger"></span>
            </div>
        </div>
        <div class="row border border-2 border-bottom-0 border-end-0 border-start-0 mt-2">
            <h4 class="text-primary mt-2">Advanced Specification</h4>
            <div class="col-6 mt-1">
                <label asp-for="AdvancedSpec.SpecName" class="form-label"></label>
                <div class="form-floating">
                    <input asp-for="AdvancedSpec.SpecName" type="text" class="form-control" id="floatingInput" placeholder="Connection;Color">
                    <label for="floatingInput">@advancedSpecInfo</label>
                </div>
                    <span asp-validation-for="AdvancedSpec.SpecName" class="text-danger"></span>
            </div>
            <div class="col-6 mt-1">
                <label asp-for="AdvancedSpec.SpecValue" class="form-label"></label>
                <div class="form-floating">
                    <textarea asp-for="AdvancedSpec.SpecValue" id="floatingTextArea" class="form-control" rows="7" placeholder="Wireless;Black" style="height:230px;"></textarea>
                    <label for="floatingTextArea">@advancedSpecInfoValues</label>
                </div>
                    <span asp-validation-for="AdvancedSpec.SpecValue" class="text-danger"></span>
            </div>
        </div>
        <div class="row border border-2 border-bottom-0 border-end-0 border-start-0 mt-2">
            <h4 class="text-primary mt-2 mb-0">Physical Specification</h4>
            <p class="text-muted mb-1 " style="font-size:12px;"> <i class="bi bi-info-circle me-1"></i>This area can be left empty!</p>
            <div class="col-6 mt-1">
                <label asp-for="PhysicalSpec.SpecName" class="form-label"></label>
                <div class="form-floating">
                    <input asp-for="PhysicalSpec.SpecName" type="text" class="form-control" id="floatingInput" placeholder="Connection;Color">
                    <label for="floatingInput">@physicalSpecInfo</label>
                </div>
                    <span asp-validation-for="PhysicalSpec.SpecName" class="text-danger"></span>
            </div>
            <div class="col-6 mt-1">
                <label asp-for="PhysicalSpec.SpecValue" class="form-label"></label>
                <div class="form-floating">
                    <textarea asp-for="PhysicalSpec.SpecValue" id="floatingTextArea" class="form-control" rows="7" placeholder="Wireless;Black" style="height:230px;"></textarea>
                    <label for="floatingTextArea">@physicalSpecInfoValues</label>
                </div>
                    <span asp-validation-for="PhysicalSpec.SpecValue" class="text-danger"></span>
            </div>
        </div>
        <div class="row border border-2 border-bottom-0 border-end-0 border-start-0 mt-2">
            <div class="col-6">
                <div class="mt-2">
                    <label asp-for="Product.ShortDescription" class="form-label"></label>
                    <input type="text" asp-for="Product.ShortDescription" class="form-control" />
                    <p class="text-muted mb-1 " style="font-size:12px;"> <i class="bi bi-info-circle me-1"></i>Maximum 50 characters!</p>
                    <span asp-validation-for="Product.ShortDescription" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row border border-2 border-bottom-0 border-end-0 border-start-0 mt-2">
            <div class="col-12">
                <div class="mt-2">
                    <label asp-for="Product.LongDescription" class="form-label"></label>
                    <textarea asp-for="Product.LongDescription" id="longDescription" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="row border border-2 border-bottom-0 border-end-0 border-start-0 mt-2">
            <div class="col-7 mt-2">
                <div class="mb-3">
                    <label asp-for="Product.ProductImage" class="form-label"></label>
                    <input type="file" id="uploadBox" name="file" class="form-control">
                </div>
                <div class="mb-4" style="">
                    <div class="form-check">
                        <input type="checkbox" asp-for="Product.IsDiscounted" class="form-check-input me-3">
                        <label asp-for="Product.IsDiscounted" class="form-check-label"></label>
                    </div>
                </div>
                <div class="mb-2">
                    <label asp-for="Product.DiscountAmount" class="form-label"></label>
                    <input type="number" step="0.1" asp-for="Product.DiscountAmount" class="form-control w-50" />
                    <p class="text-muted mb-1 " style="font-size:12px;"> <i class="bi bi-info-circle me-1"></i>This input can be left empty!</p>
                    <span asp-validation-for="Product.DiscountAmount" class="text-danger"></span>
                </div>
                <div class="mb-2" style="position:relative; top:3.5px;">
                    <label asp-for="Product.DiscountCode" class="form-label"></label>
                    <input type="text" asp-for="Product.DiscountCode" class="form-control w-50" />
                    <span asp-validation-for="Product.DiscountCode" class="text-danger"></span>
                    <p class="text-muted mb-1 " style="font-size:12px;"> <i class="bi bi-info-circle me-1"></i>This input can be left empty!</p>
                </div>
            </div>
            <div class="col-5 mt-2">
                <div class="mb-2">
                    <label asp-for="Product.QuantityInStock" class="form-label"></label>
                    <input type="number" step="1" asp-for="Product.QuantityInStock" class="form-control " />
                    <span asp-validation-for="Product.QuantityInStock" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Product.TaxRate" class="form-label"></label>
                    <input type="number" step="0.1" asp-for="Product.TaxRate" class="form-control " />
                    <span asp-validation-for="Product.TaxRate" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Product.RetailPriceStringify " class="form-label"></label>
                    <input type="text" asp-for="Product.RetailPriceStringify" class="form-control " />
                    <span asp-validation-for="Product.RetailPriceStringify" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Product.WarrantyLength" class="form-label"></label>
                    <input type="text"  asp-for="Product.WarrantyLength" class="form-control " />
                    <span asp-validation-for="Product.WarrantyLength" class="text-danger"></span>
                    <p class="text-muted mb-1" style="font-size:12px;"> <i class="bi bi-info-circle me-1"></i>e.g 2y 6m</p>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="text-center mb-3">
                <button type="submit" onclick="return ValidateInput()"  class="btn btn-outline-primary w-75">Submit</button>
            </div>
        </div>
    </div>
</form>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
            selector: '#longDescription'
        });
    </script>

    <script>

        function ValidateInput() {
            if (document.getElementById("uploadBox").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please Upload an Image!',
                });
                return false;
            }
            return true;
        }
     
    </script>
}
