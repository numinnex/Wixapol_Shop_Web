@model List<Product>
@{
    ViewData["Title"] = "Managment";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";

}


<div class="container p-2 border border-1 w-75">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> New Product</a>
        </div>
    </div>
    <table class="table table-bordered table-striped mt-3 p-2" id="productsTable">
        <thead>
            <tr>
                <th>
                   Id 
                </th>
                <th>
                   Name 
                </th>
                <th>
                    Producent
                </th>
                <th>
                    Category
                </th>
                <th>
                    IsDiscounted
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
                <th>

                </th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}

