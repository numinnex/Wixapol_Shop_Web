@model RegisterModel
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/BootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <title>Register</title>

    <style>
    </style>

</head>
<body>
    <main class="main-content" id="main_content" role="main">
        <div class="container-fluid">
            <div class="row justify-content-center" style="max-width: 940px; margin: 96px auto; ">
                <div class="col-12 bg-white  rounded-3 shadow-sm">
                    <div class="text-center mt-3">
                        <a class="display-4" style="color:#4c2715; text-decoration:none;">Wixapol</a>
                    </div>
                    <div class="container">
                        <div class="row justify-content-center mt-3">
                            <form class="col-md-6" asp-for="Register" method="post">
                                <div class=" mb-4 d-flex justify-content-center text-center">
                                    <a asp-area="Identity" asp-controller="UserAuthentication" asp-action="Login" class=" text-black top-link w-100" style="text-decoration:none">Login</a>
                                    <a asp-area="Identity" asp-controller="UserAuthentication" asp-action="Register" class=" text-black top-link w-100" style="text-decoration:none; ">Register</a>
                                </div>
                                <div class="form-floating my-2">
                                    <input asp-for="UserName" class="form-control" placeholder="Username" type="text" />
                                    <label asp-for="UserName" class="form-label text-muted"></label>
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                                <div class="form-floating my-2">
                                    <input asp-for="Email" class="form-control" placeholder="Email" type="text" />
                                    <label asp-for="Email" class="form-label text-muted">Email</label>
                                    <span class="text-danger " asp-validation-for="Email"></span>
                                </div>
                                <div class="form-floating my-2 ">
                                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                                    <label asp-for="Password" class="form-label text-muted">Password</label>
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-floating my-2 ">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                                    <label asp-for="ConfirmPassword" class="form-label text-muted">Confirm Password</label>
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="mt-2 mb-1  text-center">
                                    @if (TempData["msgfailure"] is not null)
                                    {
                                        <span class=" text-danger text-center"> @TempData["msgfailure"]</span>
                                    }
                                    else if (TempData["msgsuccess"] is not null)
                                    {
                                        <span class="text-success text-center"> @TempData["msgsuccess"]</span>
                                    }

                                </div>
                                <div class="d-flex align-items-center  mt-2 mb-4 " style="font-size: 12px;">
                                    <i class="bi bi-info-circle me-3"></i>
                                    <span> Password must contain atleast 6 characters, one uppercase letter, one lowercase letter, one special character and one number</span>
                                </div>
                                <div class="mt-4 mb-4 ">
                                </div>
                                <div class="row m-0 mb-4">
                                    <button type="submit" class="btn btn-primary" style="height: 3rem;"><b>Create Account</b></button>
                                </div>
                                <div class="separator-decorated">
                                    <span class="text">or continue with</span>
                                </div>
                                <div class="row flex-wrap mt-3 pb-3">
                                    <div class="col">
                                        <a class="my-2 d-block w-100 btn btn-outline-light"><span class="text-black"><i class="bi bi-twitter"></i> Twitter</span></a>
                                    </div>
                                    <div class="col">
                                        <a class="my-2 d-block w-100 btn btn-outline-light"><span class="text-black"><i class="bi bi-facebook"></i> Facebook</span></a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row mt-5 text-start">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-auto "><i class="bi bi-chevron-left"></i> Back To Home Page</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
