@model LoginModel
@{
    Layout = null;

}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/BootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>


    <title>Login</title>

    <style>
    </style>

</head>
<body>
    <main class="main-content" id="main_content" role="main">
        <div class="container-fluid">
            <div class="row justify-content-center" style="max-width: 940px; margin: 96px auto; ">
                <div class="col-12 bg-white  rounded-3 shadow-sm">
                    <div class="text-center mt-3">
                        <a class="display-4" style="color:#4c2715; text-decoration:none;">Wixapol</a>
                    </div>
                    <div class="container">
                        <div class="row justify-content-center mt-3">
                            <form class="col-md-6" asp-for="Login" method="post">
                                <div class=" mb-4 d-flex justify-content-center  text-center">
                                    <a asp-area="Identity" asp-controller="UserAuthentication" asp-action="Login" class=" p-1 text-black top-link w-100" style="text-decoration:none">Login</a>
                                    <a asp-area="Identity" asp-controller="UserAuthentication" asp-action="Register" class=" p-1 text-black top-link w-100" style="text-decoration:none">Register</a>
                                </div>
                                <div class="form-floating my-2">
                                    <input asp-for="UserName" class="form-control" placeholder="Username" type="text" />
                                    <label asp-for="UserName" class="form-label text-muted">Username</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    @if (TempData["msgFailureUsername"] is not null)
                                    {
                                        <span class="text-danger">@TempData["msgFailureUsername"] </span>
                                    }
                                </div>
                                <div class="form-floating my-2 ">
                                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                                    <label asp-for="Password" class="form-label text-muted">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    @if (TempData["msgFailurePassword"] is not null)
                                    {
                                        <span class="text-danger">@TempData["msgFailurePassword"] </span>
                                    }
                                </div>
                                <div class="mt-3">
                                </div>
                                <div class="mt-4 mb-4 d-flex justify-content-between">
                                    <div class="checkbox">
                                        <label class="form-check-label">
                                            <input asp-for="RememberMe" class="form-check-input m-0 me-2" type="checkbox" style="width:23px; height:23px;" />
                                            <span class="text-muted" style="font-size: 1rem;">Remember Me</span>
                                        </label>
                                    </div>
                                    <div class="link-primary frgt-password-link">
                                        <span>Forgot password?</span>
                                    </div>
                                </div>
                                <div class="row m-0 mb-4">
                                    <button type="submit" class="btn btn-primary" style="height: 3rem;"><b>Login </b></button>
                                </div>
                                <div class="separator-decorated">
                                    <span class="text">or continue with</span>
                                </div>
                                <div class="row flex-wrap mt-3 pb-3">
                                    <div class="col">
                                        <a class="my-2 d-block w-100 btn btn-outline-light"><span class="text-black"><i class="bi bi-twitter"></i> Twitter</span></a>
                                    </div>
                                    <div class="col">
                                        <a class="my-2 d-block w-100 btn btn-outline-light"><span class="text-black"><i class="bi bi-facebook"></i> Facebook</span></a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row mt-5 text-start">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-auto "><i class="bi bi-chevron-left"></i> Back To Home Page</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <partial name="_ValidationScriptsPartial" />

</body>
</html>

