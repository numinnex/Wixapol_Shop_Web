@model ChangePasswordModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="ChangePassword">
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="mt-3 bg-white rounded-2 p-3">
                
                <h3 class="text-center">Change Password</h3>
                <div class="mt-2 mb-3">
                    @if (TempData["success"] is not null )
                    {
                        <div class="alert alert-success"> @TempData["success"]!.ToString()</div>
                    }
                    @if (TempData["error"] is not null )
                    {
                        <div class="alert alert-danger"> @TempData["error"]!.ToString()</div>
                    }
                </div>
                <div class="mb-2 p-1">
                    <label asp-for="OldPassword" class="input-label mb-2"></label>
                    <input asp-for="OldPassword" class="form-control" type="password" />
                    <span asp-validation-for="OldPassword"class="text-danger"></span>
                </div>
                <div class="mb-2 p-1">
                    <label asp-for="NewPassword" class="input-label mb-2"></label>
                    <input asp-for="NewPassword" class="form-control" type="password"/>
                    <span asp-validation-for="NewPassword"class="text-danger"></span>
                </div>
                <div class="mb-2 p-1">
                    <label asp-for="NewPasswordConfirmed" class="input-label mb-2"></label>
                    <input asp-for="NewPasswordConfirmed" class="form-control" type="password"/>
                    <span asp-validation-for="NewPasswordConfirmed"class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </div>
                <div class="mt-2 text-center">
                    <a asp-area="Customer" asp-controller="UserProfile" asp-action="Settings" class="btn btn-success w-100">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{

    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

