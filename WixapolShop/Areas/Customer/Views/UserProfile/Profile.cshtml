
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .user-card-hover
    {
       color:rgb(60,20,0);
       border: 2px solid rgb(60,20,0);
       padding: 14px;
       border-radius: 4px;
       height: 81px;
       font-size: 17px;
       line-height: 22px;
       transition: color 0.4s linear;
       z-index: 1;
       position:relative;
    }
        .user-card-hover:hover{
            color:#fff !important;
        }
        .user-card-hover::before
        {
            content: "";
            position: absolute;
            left:0;
            top:0;
            width:100%;
            height:100%;
            background: rgb(60,20,0);
            z-index: -1;
            transition: transform 0.5s;
            transform-origin:0 0;
            transition-timing-function: cubic-bezier(0.5 , 1.6 , 0.4, 0.7);
        }
        .user-card-hover::before{
            transform: scaleX(0);
        }
        .user-card-hover:hover::before{
            transform: scaleX(1);
        }
 </style>

<div class="container">
    <div class="mt-3">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-3 ">
                <h4 class="" style="color:rgb(60,20,0)">Orders</h4>
                <a href="">
                <button  class="user-card-hover w-100 text-start">
                    <div class="d-flex align-items-center ">
                        <i class="bi bi-archive fs-2"></i> &nbsp &nbsp <span class=" " >Your Orders</span>
                    </div>
                </button>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <h4 class="" style="color:rgb(60,20,0)">Profile</h4>
                <a asp-action="Settings">
                <button class="user-card-hover w-100 text-start">
                    <div class="d-flex align-items-center ">
                        <i class="bi bi-person fs-2"></i> &nbsp &nbsp <span class=" ">Your Profile</span>
                    </div>
                </button>
                </a>
            </div>
        </div>
    </div>
</div>
