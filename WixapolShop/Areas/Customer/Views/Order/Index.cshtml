@model Sale
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .line-seperate
    {
        margin-bottom: 0px;
        margin-top: 16px;
        border-bottom: 1px solid rgb(238, 238, 238);
    }
</style>
<div class="container">
    <form> 
    <div class="row mt-5 ">
        <div class="col-8">
            <div class="p-4 rounded-3 bg-white">
                <h2 class="">Receiver Data</h2>
                <div class="">
                    <div class="text-muted" style="font-size: 0.8rem;">Enter your delivery information</div>
                </div>
                <div class="mt-2">
                    <div class="row">
                        <div class="col-5 form-floating ">
                            <input asp-for="Order.Name" type="text" class="form-control" id="floatingInput" placeholder="test" style="height: 46px;"/>
                            <label asp-for="Order.Name" for="floatingInput" class="ps-4" style="font-size:0.9rem; margin-top: -0.15rem;"></label>
                        </div> 
                        <div class="col-5 form-floating ">
                            <input type="text" class="form-control" id="floatingInput" placeholder="test" style="height: 46px;"/>
                            <label for="floatingInput" class="ps-4" style="font-size:0.9rem; margin-top: -0.15rem;">Surname</label>
                        </div> 
                    </div>
                    <div class="row mt-3">
                        <div class="col-7 form-floating ">
                            <input asp-for="Order.Email" type="text" class="form-control" id="floatingInput" placeholder="test" style="height: 46px;"/>
                            <label asp-for="Order.Email" for="floatingInput" class="ps-4" style="font-size:0.9rem; margin-top: -0.15rem;"></label>
                        </div> 
                    </div>
                    <div class="row mt-3">
                        <div class="col-5 form-floating ">
                            <input asp-for="Order.PhoneNumber" type="text" class="form-control" id="floatingInput" placeholder="test" style="height: 46px;"/>
                            <label asp-for="Order.PhoneNumber" for="floatingInput" class="ps-4" style="font-size:0.9rem; margin-top: -0.15rem;"></label>
                        </div> 
                    </div>
                    <div class="row mt-3">
                        <div class="col-7 form-floating ">
                            <input asp-for="Order.Adress" type="text" class="form-control" id="floatingInput" placeholder="test" style="height: 46px;"/>
                            <label asp-for="Order.Adress" for="floatingInput" class="ps-4" style="font-size:0.9rem; margin-top: -0.15rem;"></label>
                        </div> 
                    </div>
                    <div class="row mt-3">
                        <div class="col-3 form-floating ">
                            <input asp-for="Order.PostalCode" type="text" inputmode="numeric" class="form-control" id="floatingInput" placeholder="test" style="height: 46px;"/>
                            <label asp-for="Order.PostalCode" for="floatingInput" class="ps-4" style="font-size:0.9rem; margin-top: -0.15rem;"></label>
                        </div> 
                        <div class="col-7 form-floating ">
                            <input asp-for="Order.City" type="text" class="form-control" id="floatingInput" placeholder="test" style="height: 46px;"/>
                            <label asp-for="Order.City" for="floatingInput" class="ps-4" style="font-size:0.9rem; margin-top: -0.15rem;"></label>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="p-3 rounded-3 bg-white">
                <div class="mb-2 d-flex justify-content-between align-items-center">
                    <span style="color: rgb(29, 29, 27); font-size:14px;">Subtotal </span>
                    <span style="color: rgb(29, 29, 27); font-size:14px; font-weight:600">@Model.SubTotal </span>
                </div>
                <div class="mb-2 d-flex justify-content-between">
                    <span style="color: rgb(29, 29, 27); font-size:14px;">Tax </span>
                    <span style="color: rgb(29, 29, 27); font-size:14px; font-weight:600">@Model.Tax </span>
                </div>
                <div class="line-seperate"></div>
                <div class="mt-3 mb-2 d-flex justify-content-between">
                    <span style="color: rgb(29, 29, 27); font-size:19px;">To Pay </span>
                    <span style="color: rgb(29, 29, 27); font-size:19px;">@Model.Total </span>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary w-100 p-2"><span style="font-size: 18px;">To Payment</span></button>

                </div>

            </div>
        </div>
    </div>
    </form>
</div>
