@model SaleDisplayVM
@{
    ViewData["Title"] = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="mt-3 bg-white rounded-3 p-3">
        <h3>Sale number @Model.SaleId</h3>
        <div class="row mt-3">
            <div class="col-6">
                <div class="border border-1 border-light rounded-2 p-2">
                    <div><span >Sale Date:</span> <span class="fw-bold"> @Model.Sale.SaleDate.Value.ToShortDateString()</span></div>
                    <div><span>Shipping Date:</span> <span class="fw-bold"> @Model.Sale.ShippingDate.ToString()</span></div>
                    <div><span>Order Status:</span> <span class="fw-bold"> @Model.Sale.OrderStatus</span></div>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th class="text-center fw-light">
                            Product Name
                        </th>
                        <th class="text-center fw-light">
                            Warranty Ends
                        </th>
                        <th class="text-center fw-light">
                           Quantity 
                        </th>
                        <th class="text-center fw-light">
                           Subtotal 
                        </th>
                        <th class="text-center fw-light">
                           Tax 
                        </th>
                        <th class="text-center fw-light">
                           Total 
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Products.Count; ++i )
                    {
                        <tr>
                            <td class="text-center">
                                @Model.Products[i].ToString()
                            </td>
                            <td class="text-center">
                                @Model.Sale.SaleDetail[i].WarrantyExpiration.ToShortDateString()
                            </td>
                            <td class="text-center">
                                @Model.Sale.SaleDetail[i].Quantity
                            </td>
                            <td class="text-center">
                                $@Model.Sale.SaleDetail[i].SubTotal
                            </td>
                            <td class="text-center">
                               $@Model.Sale.SaleDetail[i].Tax
                            </td>
                            <td class="text-center">
                                $@Model.Sale.SaleDetail[i].Total
                            </td>
                        </tr>
                    }
                    <tr>
                        <td class="fw-bold text-center">
                            Order total:
                        </td>
                        <td>

                        </td>
                        <td> 
                        </td>
                        <td class="text-center"> 
                            $@Model.Sale.SubTotal
                        </td>
                        <td class="text-center"> 
                            $@Model.Sale.Tax
                        </td>
                        <td class="text-center"> 
                            $@Model.Sale.Total
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <h3>Invoice Data</h3>
                <div class="border border-1 border-light rounded-2 p-2">
                    <div>
                        @Model.Sale.Order.Name
                    </div>
                    <div>
                        @Model.Sale.Order.Adress
                    </div>
                    <div>
                        @Model.Sale.Order.PostalCode
                        @Model.Sale.Order.City
                    </div>
                    <div>
                        <span>Phone Number:</span> @Model.Sale.Order.PhoneNumber
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
